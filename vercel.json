{
  "version": 2,
  "builds": [
    {
      "src": "api/validate-captcha.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/validate-captcha",
      "dest": "api/validate-captcha.js"
    },
    {
      "src": "/captcha.js",
      "dest": "public/captcha.js"
    }
  ],
  "headers": [
    {
      "source": "/api/validate-captcha",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
