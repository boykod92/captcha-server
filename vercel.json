{
  "rewrites": [
    {
      "source": "/api/validate-captcha",
      "destination": "/api/validate-captcha.js"
    },
    {
      "source": "/captcha.js",
      "destination": "/public/captcha.js"
    }
  ],
  "headers": [
    {
      "source": "/api/validate-captcha",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "cleanUrls": true,  // Optional: Removes .html extensions
  "trailingSlash": false  // Optional: No trailing slash
}
